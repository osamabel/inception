# -------------------------------- Base Image -------------------------------- #
FROM debian:buster
RUN apt-get update

# ------------------------------ INSTALL vsftpd ------------------------------ #
RUN apt-get install -y vsftpd 


# ---------------------------------- CONFIG ---------------------------------- #
COPY ./tools/* /tmp
RUN chmod +x ./tmp/ftp.sh 


# ---------------------------------- SCRIPT ---------------------------------- #
ENTRYPOINT [ "/tmp/ftp.sh" ]