# -------------------------------- Base Image -------------------------------- #
FROM debian:buster
RUN apt-get update


# ---------------------------- PHP & PHP Extention --------------------------- #
RUN apt-get -y install php7.3 php7.3-fpm 7.3-mysqli wget


# ----------------------------- DOWNLOAD ADMINER ----------------------------- #
RUN	mkdir -p /var/www/html
RUN wget "http://www.adminer.org/latest.php" -O /var/www/html/index.php



# ------------------------------------ POR ----------------------------------- #
EXPOSE 8080


# -------------------------------- foreground -------------------------------- #
CMD ["php", "-S", "0.0.0.0:8080", "-t", "/var/www/html"]